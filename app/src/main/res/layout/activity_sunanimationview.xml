<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.a94941.mydemo.activitys.sunAnimationViewActivity.SunAnimationView
        android:id="@+id/sun_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sun_circle_color="@color/red"
        app:sun_color="@color/yellow"
        app:sun_font_color="@color/green"
        app:sun_font_size="12sp" />

    <Button
        android:id="@+id/btn_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置时间" />
</LinearLayout>